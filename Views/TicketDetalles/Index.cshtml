@model IEnumerable<tp_lab_4.Models.TicketDetalle>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Pedidos
            </th>
            <th>
                Cantidad
            </th>
            <th>
                Estado
            </th>
            <th>
                Fecha
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tickets.Observacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionPedido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estados.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fechaEstado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
